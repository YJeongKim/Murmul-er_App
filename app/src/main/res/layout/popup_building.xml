<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/popupBuilding"
    android:background="#ffffff">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="[ 건물 유형 ]"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:textSize="22sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:weightSum="3">

            <Button
                android:id="@+id/apartment"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_popup"
                android:layout_margin="5dp"
                android:onClick="buildingTypeClick"
                android:text="아파트"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/villa"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_popup"
                android:layout_margin="5dp"
                android:onClick="buildingTypeClick"
                android:text="빌라"
                android:textSize="20sp" />

            <Button
                android:id="@+id/officeTel"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_popup"
                android:layout_margin="5dp"
                android:onClick="buildingTypeClick"
                android:text="오피스텔"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:weightSum="2">

            <Button
                android:id="@+id/twoRoom"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/button_popup"
                android:onClick="buildingTypeClick"
                android:text="투룸"
                android:textSize="20sp" />

            <Button
                android:id="@+id/oneRoom"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_popup"
                android:onClick="buildingTypeClick"
                android:layout_margin="5dp"
                android:text="원룸"
                android:textSize="20sp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="2"
        android:layout_marginTop="5dp">

        <Button
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#EBEBEB"
            android:textSize="23dp"
            android:text="취소하기"
            android:onClick="clickCancel"/>

        <Button
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#B6E2F8"
            android:textSize="23dp"
            android:text="적용하기"
            android:onClick="clickApply"/>

    </LinearLayout>

</LinearLayout>