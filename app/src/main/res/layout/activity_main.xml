<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_main"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/editText"
                android:layout_weight="0.85"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:inputType="text"
                android:hint="input keyword"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:textSize="25dp"
                android:privateImeOptions="defaultInputmode=korean"
                />
            <ImageButton
                android:id="@+id/btnSearch"
                android:layout_weight="0.15"
                android:onClick="searchLocation"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="#FFFFFF"
                android:src="@drawable/search_custom"/>
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:background="#b6e3f9"
            android:scrollbars="none"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="">
                <Button
                    android:id="@+id/btnBuildingType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_border"
                    android:drawableRight="@drawable/angle_down_custom"
                    android:paddingLeft="15dp"
                    android:text="건물 유형"
                    android:textColor="#000000"
                    android:layout_margin="5dp"
                    android:textSize="20dp"/>
                <Button
                    android:id="@+id/btnPeriod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_border"
                    android:drawableRight="@drawable/angle_down_custom"
                    android:paddingLeft="15dp"
                    android:text="임대기간"
                    android:textColor="#000000"
                    android:layout_margin="5dp"
                    android:textSize="20dp"/>
                <Button
                    android:id="@+id/btnDeposit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_border"
                    android:drawableRight="@drawable/angle_down_custom"
                    android:paddingLeft="15dp"
                    android:text="보증금"
                    android:textColor="#000000"
                    android:layout_margin="5dp"
                    android:textSize="20dp"/>
                <Button
                    android:id="@+id/btnMonthlyCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_border"
                    android:drawableRight="@drawable/angle_down_custom"
                    android:paddingLeft="15dp"
                    android:text="월세"
                    android:textColor="#000000"
                    android:layout_margin="5dp"
                    android:textSize="20dp"/>
                <Button
                    android:id="@+id/btnOption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_border"
                    android:drawableRight="@drawable/angle_down_custom"
                    android:paddingLeft="15dp"
                    android:text="옵션"
                    android:textColor="#000000"
                    android:layout_margin="5dp"
                    android:textSize="20dp"/>
            </LinearLayout>
        </HorizontalScrollView>

        <fragment
            android:id="@+id/map_fragment"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            map:cameraZoom="16"
            map:mapType="normal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#b6e3f9"
            >
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="10dp"/>
    </LinearLayout>

</LinearLayout>
